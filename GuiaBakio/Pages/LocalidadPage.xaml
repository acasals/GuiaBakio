<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GuiaBakio.Pages.LocalidadPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="{Binding LocalidadActual.Nombre}">
    <ScrollView>
        <StackLayout Padding="10">

            <!-- Texto descriptivo -->
            <Editor Text="{Binding LocalidadActual.Texto}" AutoSize="TextChanges" />

            <!-- Lista de Apartados -->
            <CollectionView ItemsSource="{Binding Apartados}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <toolkit:Expander>
                            <toolkit:Expander.Header>
                                <Label Text="{Binding Nombre}" FontAttributes="Bold" />
                            </toolkit:Expander.Header>
                            <Editor Text="{Binding Texto}" AutoSize="TextChanges" />
                        </toolkit:Expander>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Galería de imágenes -->
            <CarouselView ItemsSource="{Binding ImagenesLocalidad}">
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <Image Source="{Binding Foto}" Aspect="AspectFill" HeightRequest="200" />
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>

            <!-- Acciones -->
            <Button Text="Agregar Apartado" Command="{Binding AgregarApartadoCommand}" />
            <Button Text="Agregar Imagen" Command="{Binding AgregarImagenCommand}" />
            <Button Text="Guardar cambios" Command="{Binding GuardarLocalidadCommand}" />

        </StackLayout>
    </ScrollView>
</ContentPage>